# Copy this to .env and fill in your values

# Your Next.js app URL (where the scraper POSTs messages to)
NEXT_APP_URL=http://localhost:3000

# Secret key to authenticate scraper -> Next.js API calls
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
INGEST_SECRET=your-random-secret-key-here

# Supabase (optional â€” scraper POSTs to Next.js which handles Supabase)
# Only needed if you want the scraper to call Supabase directly
SUPABASE_URL=https://yozvhqqzrnnnahszgiow.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# WhatsApp groups to capture (comma-separated, partial name match)
# Leave empty to capture ALL groups (not recommended)
# Example: "PSE Office,PSE Trade,PSE Greece"
WATCH_GROUPS=PSE Office,PSE Trade

# Session data directory (keeps you logged in between restarts)
SESSION_DIR=./session
